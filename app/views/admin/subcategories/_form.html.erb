<%= form_for @subcategory, url: locals[:url_action], :html => { :class => "form-horizontal subcategory" } do |f| %>

  <% if @subcategory.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@subcategory.errors.count, "error") %> prohibited this subcategory from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @subcategory.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :category_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.collection_select(:category_id, Category.all, :id, :name,
                              { prompt: "Selecione uma categoria" },
                              { class: 'form-control' } 
                             )
      %>
    </div>
    <%=f.error_span(:category_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_subcategories_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
