<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">An√∫ncios
            <small>Secondary Text</small>
        </h1>
    </div>
</div>
<!-- /.row -->

<% @ads.each do |ad| %>
	<!-- Advertisement -->
	<div class="row">
	    <div class="col-md-7">
	        <a href="#">
	            <img class="img-responsive" src="http://placehold.it/700x300" alt="">
	        </a>
	    </div>
	    <div class="col-md-5">
	        <h3><%= ad.title %></h3>
	        <h4><%= ad.subtitle %></h4>
	        <p><%= ad.description %></p>
	        <%= link_to "Ver mais", "#", class: 'btn btn-primary'  %>
	    </div>
	</div>
	<!-- /.row -->

	<hr />
<% end %>

<!-- Pagination -->
<div class="row">
    <div class="col-lg-12">
        <%= page_entries_info @ads %>
    </div>
</div>
<div class="row text-center">
    <div class="col-lg-12">
        <%= will_paginate @ads, renderer: BootstrapPagination::Rails,
                                previous_label: '&laquo;',
                                next_label: '&raquo;' %>
    </div>
</div>
<!-- /.row -->