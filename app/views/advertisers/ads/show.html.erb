<%- model_class = Ad -%>

<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @ad.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:subtitle) %>:</strong></dt>
  <dd><%= @ad.subtitle %></dd>
  <dt><strong><%= model_class.human_attribute_name(:subcategory_id) %>:</strong></dt>
  <dd><%= @ad.subcategory_id? ? @ad.subcategory.name : "---" %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @ad.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @ad.status %></dd>
  <dt><strong><%= model_class.human_attribute_name(:premium) %>:</strong></dt>
  <dd><%= @ad.premium %></dd>
  <dt><strong><%= model_class.human_attribute_name(:advertiser_id) %>:</strong></dt>
  <dd><%= @ad.advertiser.name %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              advertisers_ads_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_advertisers_ad_path(@ad), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              advertisers_ad_path(@ad),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
